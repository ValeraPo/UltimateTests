<Window x:Class="Visual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Visual"
        mc:Ignorable="d"
        Title="Ultimate Tests" Height="280" Width="380" ResizeMode="CanMinimize" ShowInTaskbar="False" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFD573"/>
            <GradientStop Color="#FFBA73" Offset="1"/>
            <GradientStop Color="#FFFFC773" Offset="0.5"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1">
            <TextBox x:Name="TextBoxLogin" Margin="60 10 60 0" FontSize="16" Padding="10,0,0,0" 
                     Background="#FFFFE3C0" Foreground="#FF926600"/>
            <!--исчезающий текст для Login-->
            <TextBlock IsHitTestVisible="false" FontSize="16" Text="Login"
                       Grid.Row="1" Margin="72 -23 72 0" VerticalAlignment="Top" Foreground="#FF926600">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Text, ElementName=TextBoxLogin}" Value="">
                                <Setter Property="Visibility" Value="Visible"></Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
            
            <PasswordBox x:Name="PasswordBox" Margin="60 10 60 0" FontSize="16" Padding="10,0,0,0" 
                     Background="#FFFFE3C0" Foreground="#FF926600" PasswordChanged="PasswordBox_PasswordChanged"/>
            <!--исчезающий текст для Password-->
            <TextBlock x:Name="RemovableText" IsHitTestVisible="false" FontSize="16" Text="Password"
                       Grid.Row="1" Margin="72 -23 72 0" VerticalAlignment="Top" Foreground="#FF926600">
            </TextBlock>
                        
            <Grid Margin="0 10 0 0">
                <Button Content="Войти" Margin="100,0,100,0" Foreground="#FF926600" Background="#FFFFE440"/>
            </Grid>
        </StackPanel>
        <Grid Name="LogoContainer" Grid.Row="0" Background="Transparent" MouseDown="LogoContainer_MouseDown">
            <!--<Image Source="/MainIcon.png"/>--> 
        </Grid>
    </Grid>
</Window>
