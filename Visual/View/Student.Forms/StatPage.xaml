<Page x:Class="WpfAppTrying.View.Student.StatPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppTrying.View.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatPage" Loaded="Page_Loaded">

    <Grid Background="Aquamarine">
        <ListBox x:Name="dgHistory">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <WrapPanel Margin="5">
                        <TextBlock FontSize="16" Text="{Binding Path=Quiz}" HorizontalAlignment="Center" />
                        <TextBlock FontSize="16" Text="{Binding Path=CountOfQuiz}" HorizontalAlignment="Center" />
                        <TextBlock FontSize="16" Text="{Binding Path=Score}" HorizontalAlignment="Center" />
                    </WrapPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
